{
  "name": "postcat-opendlp",
  "title": "OpenDLP sercurity check",
  "version": "0.0.6",
  "description": "OpenDLP detect API sensitive words to make your API more secure",
  "repository": {
    "url": "https://github.com/hitsz-ids/openDLP"
  },
  "main": "dist/operate.js",
  "node": "src/main.js",
  "author": "OpenDLP",
  "logo": "https://data.eolink.com/qI7HuYB07f63e5567e7cf17a61c96ace137083194f3f898",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "build:watch": "rollup -w -c rollup.config.js"
  },
  "categories": [
    "API Security"
  ],
  "features": {
    "apiPreviewTab": {
      "rightExtra": [
        {
          "name": "API Sercurity Check",
          "icon": "file-text",
          "tooltip": "扫描 API 敏感词",
          "events": [
            {
              "name": "click",
              "handler": "sercurityCheck"
            }
          ]
        }
      ]
    },
    "i18n": {
      "sourceLocale": "en-US",
      "locales": [
        "zh-Hans"
      ]
    },
    "configuration": {
      "type": "object",
      "properties": {
        "postcat-opendlp.serverUrl": {
          "type": "string",
          "required": true,
          "default": "",
          "label": "OpenDLP 服务地址",
          "description": "部署 OpenDLP 服务后得到的地址"
        }
      }
    }
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "esbuild": "^0.14.38",
    "rollup": "^2.78.0",
    "rollup-plugin-dts": "^4.2.1",
    "rollup-plugin-esbuild": "^4.9.1",
    "rollup-plugin-inline-code": "^1.2.7",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.1"
  }
}
