{
  "name": "postcat-jwt-bearer",
  "title": "JWT Authorization",
  "version": "0.0.1",
  "description": "JWT Bearer Authorization",
  "author": {
    "name": "Postcat"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Postcatlab/postcat-extensions.git"
  },
  "logo": "https://data.eolink.com/pGtIXHG6c0ebf5254f4046ff96239cc3676784985bd4d94",
  "engines": {
    "postcat": "^0.4.0"
  },
  "categories": [
    "API Testing"
  ],
  "features": {
    "authAPI": {
      "action": "authAPI",
      "label": "JWT Bearer",
      "configuration": {
        "type": "object",
        "properties": {
          "payload": {
            "ui": {
              "widget": "textarea",
              "rows": 4
            },
            "placeholder": "Please enter Payload,the format must be JSON",
            "type": "string",
            "label": "Payload",
            "default": "{}"
          },
          "algorithm": {
            "type": "string",
            "ui": {
              "widget": "select"
            },
            "required": true,
            "default": "HS256",
            "label": "algorithm",
            "enum": [
              {
                "label": "HS256",
                "value": "HS256"
              },
              {
                "label": "HS384",
                "value": "HS384"
              },
              {
                "label": "HS512",
                "value": "HS512"
              },
              {
                "label": "RS256",
                "value": "RS256"
              },
              {
                "label": "RS384",
                "value": "RS384"
              },
              {
                "label": "RS512",
                "value": "RS512"
              },
              {
                "label": "PS256",
                "value": "PS256"
              },
              {
                "label": "PS384",
                "value": "PS384"
              },
              {
                "label": "PS512",
                "value": "PS512"
              },
              {
                "label": "ES256",
                "value": "ES256"
              },
              {
                "label": "ES384",
                "value": "ES384"
              },
              {
                "label": "ES512",
                "value": "ES512"
              }
            ]
          },
          "tokenPosition": {
            "type": "string",
            "ui": {
              "widget": "select"
            },
            "required": true,
            "default": "header",
            "label": "Add JWT token to",
            "enum": [
              {
                "label": "Request Header",
                "value": "header"
              },
              {
                "label": "Query Param",
                "value": "query"
              }
            ]
          },
          "jwtHeaders": {
            "ui": {
              "widget": "textarea",
              "rows": 4
            },
            "placeholder": "Please enter JWT other headers,the format must be JSON",
            "type": "string",
            "label": "JWT headers",
            "default": "{}"
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "algorithm": {
                  "enum": ["HS256", "HS384", "HS512"]
                }
              }
            },
            "then": {
              "properties": {
                "Secret": {
                  "type": "string",
                  "default": "",
                  "label": "Secret"
                },
                "isBase64Encoded": {
                  "ui": {
                    "widget": "checkbox"
                  },
                  "type": "boolean",
                  "label": "",
                  "title": "Secret Base64 encoded",
                  "default": false
                }
              },
              "required": [
                "Secret"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "algorithm": {
                  "enum": ["RS256", "RS384", "RS512", "PS256", "PS384", "PS512", "ES256", "ES384", "ES512"]
                }
              }
            },
            "then": {
              "properties": {
                "Secret": {
                  "type": "string",
                  "ui": {
                    "widget": "textarea"
                  },
                  "default": "",
                  "label": "Secret"
                }
              },
              "required": [
                "Secret"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "tokenPosition": {
                  "enum": ["header"]
                }
              }
            },
            "then": {
              "properties": {
                "headerPrefix": {
                  "type": "string",
                  "default": "Bearer",
                  "label": "Request header prefix"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "tokenPosition": {
                  "enum": ["query"]
                }
              }
            },
            "then": {
              "properties": {
                "queryTokenName": {
                  "type": "string",
                  "default": "token",
                  "label": "Query param name"
                }
              }
            }
          }

        ]
      }
    },
    "i18n": {
      "sourceLocale": "en-US",
      "locales": [
        "zh-Hans"
      ]
    }
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "jsonwebtoken": "^9.0.0"
  }
}
