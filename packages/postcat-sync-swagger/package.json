{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "name": "postcat-sync-swagger",
  "version": "0.0.5",
  "description": "Sync API from URL",
  "main": "dist/index.js",
  "title": "Sync Swagger",
  "logo": "https://ng.ant.design/assets/img/logo.svg",
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "build:watch": "rollup -w -c rollup.config.mjs",
    "test": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eolinker/postcat-extensions.git"
  },
  "author": "Postcat",
  "license": "Apache-2.0 License",
  "bugs": {
    "url": "https://github.com/eolinker/postcat-extensions/issues"
  },
  "homepage": "https://github.com/eolinker/postcat-extensions#readme",
  "devDependencies": {
    "@rollup/plugin-json": "^5.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/lodash-es": "*",
    "@types/node": "^18.14.0",
    "esbuild": "^0.14.38",
    "rollup": "^3.17.2",
    "rollup-plugin-dts": "^5.2.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.9.5"
  },
  "categories": [
    "Data Migration"
  ],
  "features": {
    "updateAPI": {
      "action": "updateAPI",
      "label": "Swagger 3.0",
      "configuration": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "label": "Swagger URL",
            "required": true
          },
          "basicAuth": {
            "type": "boolean",
            "label": "Basic Auth",
            "span": 4,
            "default": false
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "basicAuth": {
                  "const": true
                }
              }
            },
            "then": {
              "properties": {
                "key": {
                  "type": "string",
                  "label": "Basic Auth Key"
                },
                "value": {
                  "type": "string",
                  "label": "Basic Auth Value"
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "basicAuth": {
                  "const": false
                }
              }
            },
            "then": {
              "properties": {}
            }
          }
        ]
      }
    },
    "i18n": {
      "sourceLocale": "en-US",
      "locales": [
        "zh-Hans"
      ]
    }
  },
  "dependencies": {
    "lodash": "*",
    "lodash-es": "^4.17.21"
  }
}
